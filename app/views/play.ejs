<html>
    <head>
      <title><%= title %></title>
      <link rel="stylesheet" href="stylesheets/style.css"/>
      <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.0/css/all.css" integrity="sha384-Mmxa0mLqhmOeaE8vgOSbKacftZcsNYDjQzuCOm6D02luYSzBG8vpaOykv9lFQ51Y" crossorigin="anonymous"/>
      <link rel="shortcut icon" type="image/x-icon" href="favicon.ico"/>
    </head>
    <body <% if (isMobile) { %> class="background" <% } %>>
      <% if (!isMobile) { %>
      <script src="javascripts/play.js"></script>
      <div class="header background-play">
        <h1 class="center-text margin-top-60">
          Emmanuel Su&aacute;rez
        </h1>
      </div>
      <div class="row-center">
        <canvas id="game-div" class="game-div" width="768px" height="512px"></canvas>
      </div>
      <script>
        window.onload = function () {
            App.main("game-div", "../assets");
        };
      </script>
      <% } else { %>
      <div class="center-text">
        <h1 class="mobile-h1">Try this out on a desktop!</h1>
      </div>
      <% } %>
    </body>
  </html>
