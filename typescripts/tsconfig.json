{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "../public/javascripts",
        "baseUrl": ".",
        "paths": {
            "*": [
                "../node_modules/*",
                "types/*"
            ]
        },
    },
    "include": [
        "**/*"
    ]
}
